<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.srinivas.mudavath.voicebarcomponent.MainActivity">

    <com.srinivas.mudavath.voicebarcomponent.AudioWithProgress
        android:id="@+id/awp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:text_color="@color/white"
        app:progress_style="@drawable/custom_receiver_progress_bar"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp">

    </com.srinivas.mudavath.voicebarcomponent.AudioWithProgress>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:background="@drawable/follow_button_gray_active"
        android:text="Methods exposed: click on items to see effects"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:background="@drawable/follow_button_gray_active"
        android:text="1.Play/Pause"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:background="@drawable/follow_button_gray_active"
        android:text="2.Clear"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_reposition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:background="@drawable/follow_button_gray_active"
        android:text="3.Set Duration"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_awp_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:background="@drawable/follow_button_gray_active"
        android:text="4.Change background color"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_fb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:background="@drawable/follow_button_gray_active"
        android:text="5. Share on FB"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:background="@drawable/follow_button_gray_active"
        android:text="6. Heart/Like"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_twitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:background="@drawable/follow_button_gray_active"
        android:text="7. Share on Twitter"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_iv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:background="@drawable/follow_button_gray_active"
        android:text="8. Share on Instavoice"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</LinearLayout>
